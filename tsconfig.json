{
    "include": ["src/**/*", "./@types"],
    "exclude": ["node_modules"],
    "file": [".ts", ".tsx", ".js", ".jsx"],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "allowJs": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "module": "esnext",
        "target": "es5",
        "moduleResolution": "node",
        "isolatedModules": true,
        "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],

        "sourceMap": true,
        "pretty": true,
        "typeRoots": [
            "./@types",
            "./node_modules/vue/types",
            "./node_modules/vuex/types",
            "./node_modules/vue-router/types"
        ]
    }
}

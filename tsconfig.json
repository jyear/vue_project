{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "isolatedModules": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "sourceMap": true,
    "pretty": true,
    "typeRoots": ["./@types", "./node_modules/vue/types"]
  }
}
